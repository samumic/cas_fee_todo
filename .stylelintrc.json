{
  "extends": "stylelint-config-standard",
  "rules": {
    "indentation": [2],
    "selector-class-pattern": "([a-z0-9]+(-{1})?[a-z0-9]+)|(--|__)",
    "custom-property-pattern": "([a-z0-9]+(-{1})?[a-z0-9]+)|(--|__)",
    "selector-id-pattern": "([a-z0-9]+(-{1})?[a-z0-9]+)|(--|__)",
    "max-line-length": [120, {"ignore": ["non-comments"]}],
    "color-function-notation": "modern",
    "string-quotes": "single",
    "keyframes-name-pattern": "([a-z0-9]+(-{1})?[a-z0-9]+)|(--|__)"
  }
}
