{
  "extends": "stylelint-config-standard",
  "plugins": [
    "@namics/stylelint-bem"
  ],
  "rules": {
    "indentation": [2],
    "string-quotes": "single",
    "selector-class-pattern": "^[a-z]([a-z0-9-]+)?(__([a-z0-9]+-?)+)?(--([a-z0-9]+-?)+){0,2}$|^Mui.*$",
    "plugin/stylelint-bem-namics": true
  }
}
